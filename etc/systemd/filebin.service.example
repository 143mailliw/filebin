# Example configuration for /etc/systemd/system/filebin.service

[Unit]
Description=Filebin
After=network.target

[Service]
ExecStart=/usr/bin/filebin --filedir /srv/filebin/files --tempdir /srv/filebin/temp --logdir /var/log/filebin --baseurl https://filebin.example.com --port 8080
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=filebin
PrivateTmp=true
User=filebin
Group=filebin

[Install]
WantedBy=multi-user.target
